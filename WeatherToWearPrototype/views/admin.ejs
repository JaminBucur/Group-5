<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Weather To Wear</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <header>
        <%- include('partials/navbar') %>
    </header>

    <div class="container">
        <div id="comments-section">
            <h2>Manage Comments</h2><br>
            <ul id="comment-list" class="list-group">
                <% if (comments.length === 0) { %>
                    <h6>Feed empty. No comments are flagged.</h6>
                <% } %>

                <% comments.forEach(comment => { %>
                <li class="list-group-item" data-comment-id="1">
                    
                        <span><%= comment.Username %>: <%= comment.Comment %></span>
                        <form action="/dismissComment" method="post">
                            <input type="hidden" name="Comment" value="<%= comment.Comment %>">
                            <button type="submit" class="btn btn-primary float-end">Dismiss</button>
                        </form>
                        <!-- <button class="btn btn-primary float-end">Dismiss</button> -->
                        <form action="/deleteComment" method="post">
                            <input type="hidden" name="Comment" value="<%= comment.Comment %>">
                            <button type="submit" class="btn btn-danger float-end delete-comment-btn">Delete</button>
                        </form>
                        <!-- <button class="btn btn-danger float-end delete-comment-btn" data-bs-toggle="modal"
                            data-bs-target="#deleteCommentModal">Delete</button> -->
                        
                            <!-- <input type="hidden" name="Username" value="<%= comment.Username %>"> -->
                            <!-- <button type="submit" class="btn btn-warning float-end ban-user-btn">Ban User</button> -->
                        <button class="btn btn-warning float-end ban-user-btn" data-bs-toggle="modal" data-bs-target="#banUserModal">Ban User</button>
                           
                    <form action="/banUser" method="post">
                        <div class="modal fade" id="banUserModal" tabindex="-1" aria-labelledby="banUserModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="banUserModalLabel">Ban User</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <label for="ban-user-reason" class="form-label">Reason for Ban</label>
                                        <input type="text" class="form-control" rows="3" name="BanReason" required>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    
                                        <input type="hidden" name="Username" value="<%= comment.Username %>">

                                        <button type="submit" class="btn btn-warning" id="confirm-ban-user-btn">Ban User</button>
                                    
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form> 
                </li><% }) %>
                    <!-- <button class="btn btn-primary float-end">Dismiss</button>
                    <button class="btn btn-danger float-end delete-comment-btn" data-bs-toggle="modal"
                        data-bs-target="#deleteCommentModal">Delete</button>
                    <button class="btn btn-warning float-end ban-user-btn" data-bs-toggle="modal"
                        data-bs-target="#banUserModal">Ban User</button>
                </li> -->
            </ul>
        </div>
        <hr>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script src="admin.js"></script> -->
</body>

</html>