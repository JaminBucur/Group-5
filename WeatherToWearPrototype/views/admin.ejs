<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Weather To Wear</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <header>
        <%- include('partials/navbar') %>
    </header>

    <div class="container">
        <h2>Admin Panel</h2>
        <div id="comments-section">
            <h3>Manage Comments</h3>
            <ul id="comment-list" class="list-group">
                <!-- Dummy comments will be dynamically added here -->
                <li class="list-group-item" data-comment-id="1">
                    <span>User1: Comment 1: This is a dummy comment.</span>
                    <button class="btn btn-danger float-end delete-comment-btn" data-bs-toggle="modal"
                        data-bs-target="#deleteCommentModal">Delete</button>
                    <button class="btn btn-warning float-end ban-user-btn" data-bs-toggle="modal"
                        data-bs-target="#banUserModal">Ban User</button>
                </li>
                <li class="list-group-item" data-comment-id="2">
                    <span>User2: Comment 2: Another dummy comment here.</span>
                    <button class="btn btn-danger float-end delete-comment-btn" data-bs-toggle="modal"
                        data-bs-target="#deleteCommentModal">Delete</button>
                    <button class="btn btn-warning float-end ban-user-btn" data-bs-toggle="modal"
                        data-bs-target="#banUserModal">Ban User</button>
                </li>
            </ul>
        </div>
        <hr>
        <div id="ads-section">
            <h3>Manage Ads</h3>
            <ul id="ad-list" class="list-group">
                <!-- Dummy ads will be dynamically added here -->
                <li class="list-group-item">
                    <span>Ad 1: This is a dummy ad.</span>
                    <button class="btn btn-success float-end">Accept</button>
                    <button class="btn btn-danger float-end reject-ad-btn" data-bs-toggle="modal"
                        data-bs-target="#rejectAdModal">Reject</button>
                </li>
                <li class="list-group-item">
                    <span>Ad 2: Another dummy ad here.</span>
                    <button class="btn btn-success float-end">Accept</button>
                    <button class="btn btn-danger float-end reject-ad-btn" data-bs-toggle="modal"
                        data-bs-target="#rejectAdModal">Reject</button>
                </li>
            </ul>
        </div>
    </div>

    <div class="modal fade" id="deleteCommentModal" tabindex="-1" aria-labelledby="deleteCommentModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteCommentModalLabel">Delete Comment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <label for="delete-comment-reason" class="form-label">Reason for Deletion</label>
                    <textarea class="form-control" id="delete-comment-reason" rows="3" required></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" id="confirm-delete-comment-btn">Delete Comment</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="banUserModal" tabindex="-1" aria-labelledby="banUserModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="banUserModalLabel">Ban User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <label for="ban-user-reason" class="form-label">Reason for Ban</label>
                    <textarea class="form-control" id="ban-user-reason" rows="3" required></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-warning" id="confirm-ban-user-btn">Ban User</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="rejectAdModal" tabindex="-1" aria-labelledby="rejectAdModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rejectAdModalLabel">Reject Ad</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <label for="reject-ad-reason" class="form-label">Reason for Rejection</label>
                    <textarea class="form-control" id="reject-ad-reason" rows="3" required></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" id="confirm-reject-ad-btn">Reject Ad</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="admin.js"></script>
</body>

</html>